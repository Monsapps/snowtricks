{% extends "base.html.twig" %}

{% block title %}SnowTricks - Registration{% endblock %}

{% block body %}
{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="container-fluid container-md vh-100">
        <div class="d-none d-md-block title-box">
           Registration
        </div>
        <div class="row justify-content-md-center">
            <div class="col col-md-7 col-lg-6 col-xl-5 col-xxl-4 mx-4 mx-md-2 my-4 py-md-4 px-3 px-md-5 border border-dark">
                <div class="d-block d-md-none mt-1 fs-1 text-center">
                    Registration
                </div>
                <div class="row row-cols-1 form-container mt-5 mt-md-1">
                    <div class="col text-center">
                        {{ form_label(form.name) }}
                    </div>
                    <div class="col text-center {{  form_errors(form.name) ? 'form-error' : '' }}">
                        {{ form_widget(form.name) }}
                    </div>
                    <div class="col text-center">
                        {% if form_errors(form.name) is empty %}
                            {{ form_help(form.name) }}
                        {% else %}
                            {{ form_errors(form.name) }}
                        {% endif %}
                    </div>
                </div>
                <div class="row row-cols-1 form-container mt-5 mt-md-1">
                    <div class="col text-center">
                        {{ form_label(form.email) }}
                    </div>
                    <div class="col text-center {{  form_errors(form.email) ? 'form-error' : '' }}">
                        {{ form_widget(form.email) }}
                    </div>
                    <div class="col text-center">
                        {% if form_errors(form.email) is empty %}
                            {{ form_help(form.email) }}
                        {% else %}
                            {{ form_errors(form.email) }}
                        {% endif %}
                    </div>
                </div>
                <div class="row row-cols-1 form-container mt-5 mt-md-1">
                    <div class="col text-center">
                        {{ form_label(form.password) }}
                    </div>
                    <div class="col text-center {{  form_errors(form.password) ? 'form-error' : '' }}">
                        {{ form_widget(form.password) }}
                    </div>
                    <div class="col text-center">
                        {% if form_errors(form.password) is empty %}
                            {{ form_help(form.password) }}
                        {% else %}
                            {{ form_errors(form.password) }}
                        {% endif %}
                    </div>
                </div>
                <div class="row row-cols-1 mt-5 mt-md-1">
                    <div class="col text-center">
                        <button type="submit" class="btn btn-primary">Create an account</button>
                    </div>
                </div>
                <a href="{{ path("signin") }}" class="d-block d-md-none text-center my-5">Already an account ?</a>
            </div>
        </div>
    </div>
{{ form_rest(form) }}
{% endblock %}