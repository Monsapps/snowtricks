{% extends "base.html.twig" %}

{% block title %}SnowTricks - Forgot Password{% endblock %}

{% block body %}

{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="container-fluid container-md vh-100">
        <div class="d-none d-md-block title-box">
           Forgot Password
        </div>
        <div class="row justify-content-md-center">
            <div class="col col-md-7 col-lg-6 col-xl-5 col-xxl-4 mx-4 mx-md-2 my-5 py-md-4 px-3 px-md-5 border border-dark">
                <div class="d-block d-md-none mt-1 fs-1 text-center">
                    Forgot Password
                </div>
                <div class="row row-cols-1 form-container mt-5 mt-md-1">
                    <div class="col text-center">
                        {{ form_label(form.name) }}
                    </div>
                    <div class="col text-center {{  form_errors(form.name) ? 'form-error' : '' }}">
                        {{ form_widget(form.name) }}
                    </div>
                    <div class="col text-center">
                        {% if form_errors(form.name) is empty %}
                            {{ form_help(form.name) }}
                        {% else %}
                            {{ form_errors(form.name) }}
                        {% endif %}
                    </div>
                </div>
                <div class="row row-cols-1 my-5 my-md-3">
                    <div class="col text-center">
                        {{ form_row(form.ask) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{{ form_rest(form) }}

{% endblock %}