{% extends "base.html.twig" %}

{% block title %}SnowTricks - Login{% endblock %}

{% block body %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="container-fluid container-md position-relative vh-100">
        <div class="d-none d-md-block title-box">
            Login
        </div>
        <div class="position-absolute middle-box">
            <div class="d-block d-md-none title-box">
                Login
            </div>
            <form action="{{ path('signin') }}" method="post">
                <div>
                    <label for="username">Username:</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}"/>
                </div>
                <div>
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="_password"/>
                </div>
                <div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <input type="hidden" name="_target_path" value="{{ path("homepage") }}"/>
                </div>
                <div>
                    <button type="submit">Login</button>
                </div>
            </form>
            <div class="d-block d-md-none">
                <a href="{{ path("signup") }}">Register</a>
            </div>
            <a href="{{ path("forgot_password") }}">Forgot Password ?</a>
        </div>
    </div>
{% endblock %}